.main-contents
  = form_with model: @commodity,method: :post, html: { id: :commodity_form }, local: true do |f|
    .input-box
      .exhibition-image
        .exhibition-image__title
          %ul
            %li
              画像
            %li.required
              必須
              -# - if @commodity.errors.any?
              -#   - @commodity.errors.full_messages.each do |t|
              -#     = t
        .exhibition-image__text
          %p  最大5枚までアップロードできます
        .image-box
          .prev-content
          .label-content
            %label{for: "commodity_images_attributes_0_image", class: "label-box", id: "label-box--0"}
              %pre.label-box__text 
                =icon("fa", "camera", class: "camera") 
                %br/
                クリックしてファイルをアップロード

          .hidden-content
            = f.fields_for :images do |i|
              = i.file_field :image, class: "hidden-field"
              %input{class:"hidden-field", type: "file", name: "commodity[images_attributes][1][image]", id: "commodity_images_attributes_1_image" }
              %input{class:"hidden-field", type: "file", name: "commodity[images_attributes][2][image]", id: "commodity_images_attributes_2_image" }
              %input{class:"hidden-field", type: "file", name: "commodity[images_attributes][3][image]", id: "commodity_images_attributes_3_image" }
              %input{class:"hidden-field", type: "file", name: "commodity[images_attributes][4][image]", id: "commodity_images_attributes_4_image" }
      %hr
      .item-content
        .item-content__item-name
          %ul.item-name-title
            %li
              商品名
            %li.required
              必須
          .item-content__item-name__text-box
            .text-form
              = f.text_field :name, placeholder: "40文字まで", value: "", class: "text-form__input"
        .item-content__item-explanation
          %ul.explanation-title
            %li
              商品の説明
            %li.required
              必須
          = f.text_area :text,class: "text-box", placeholder: "商品の説明（必須 1,000文字以内）（色、素材、重さ、定価、注意点など）例）2010年頃に1万円で購入したジャケットです。ライトグレーで傷はありません。あわせやすいのでおすすめです。", type: "text", :rows => "7"
          %p.text.counter
            1/1000

      %hr
      .item-details
        %p 商品の詳細
        .item-details__category
          %ul.category-title
            %li
              カテゴリー
            %li.required
              必須
          .item-details__category__select-box
            .item-details__category__select-box__select-area
              =f.select :category_id, @category_select, {}, {name: "commodity[category_id]", class: "category-select", id: "category-parent"}
              %svg{"aria-hidden": "true", fill: "#888888", "fill-rule": "evenodd", height: "24", viewbox: "0 0 24 24", width: "24"}
                %path{d: "M12,15.66a1.73,1.73,0,0,1-1.2-.49L5.21,9.54a.7.7,0,0,1,1-1l5.62,5.62c.15.15.27.15.41,0L17.8,8.6a.71.71,0,0,1,1,0,.69.69,0,0,1,0,1l-5.57,5.58A1.71,1.71,0,0,1,12,15.66Z"}
        .item-details__clothe
          %ul.clothe-title
            %li
              サイズ
            %li.required
              任意
          .item-details__clothe__select-box
            .item-details__clothe__select-box__select-area
              = f.select :clothe, ["XXS以下", "XS(SS)", "S", "M", "L", "XL(LL)", "2XL(3L)", "3LX(4L)", "4XL(5L)以上", "FREE SIZE"], prompt: "選択してください", class: "" 
              %svg{"aria-hidden": "true", fill: "#888888", "fill-rule": "evenodd", height: "24", viewbox: "0 0 24 24", width: "24"}
                %path{d: "M12,15.66a1.73,1.73,0,0,1-1.2-.49L5.21,9.54a.7.7,0,0,1,1-1l5.62,5.62c.15.15.27.15.41,0L17.8,8.6a.71.71,0,0,1,1,0,.69.69,0,0,1,0,1l-5.57,5.58A1.71,1.71,0,0,1,12,15.66Z"}
        
        .item-details__brand
          %ul.brand-title
            %li
              ブランド
            %li.required
              任意
          .item-details__brand__text-box
            .text-form
              = f.text_field :brand, placeholder: "例）シャネル", value: "", class: "text-form__input"
        .item-details__condition
          %ul.condition-title
            %li
              商品の状態
            %li.required
              必須
          .item-details__condition__select-box
            .item-details__condition__select-box__select-area
              =f.select :condition,[["新品・未使用"], ["未使用に近い"],  ["目立った傷や汚れなし"], ["やや傷や汚れあり"],["傷や汚れあり"],["全体的に状態が悪い"] ], prompt: "選択してください",class: ""
              %svg{"aria-hidden": "true", fill: "#888888", "fill-rule": "evenodd", height: "24", viewbox: "0 0 24 24", width: "24"}
                %path{d: "M12,15.66a1.73,1.73,0,0,1-1.2-.49L5.21,9.54a.7.7,0,0,1,1-1l5.62,5.62c.15.15.27.15.41,0L17.8,8.6a.71.71,0,0,1,1,0,.69.69,0,0,1,0,1l-5.57,5.58A1.71,1.71,0,0,1,12,15.66Z"}
      %hr
      .delivery
        .delivery__help
          %p 配送について
          =link_to "#" do
            %svg{"aria-hidden": "true", fill: "#222222", "fill-rule": "evenodd", height: "24", viewbox: "0 0 24 24", width: "24"}
              %path{d: "M12,2A10,10,0,1,0,22,12,10,10,0,0,0,12,2Zm0,18.6A8.6,8.6,0,1,1,20.6,12,8.61,8.61,0,0,1,12,20.6Z"}
              %path{d: "M14.18,7.52A2.72,2.72,0,0,0,13.25,7a3.16,3.16,0,0,0-1.17-.2A3.12,3.12,0,0,0,10,7.43,2.92,2.92,0,0,0,9,9.27c0,.12,0,.18.12.19l1.4.22c.09,0,.15,0,.17-.13a1.63,1.63,0,0,1,.44-.91A1.2,1.2,0,0,1,12,8.31a1.17,1.17,0,0,1,.88.33,1.15,1.15,0,0,1,.33.83,1.62,1.62,0,0,1-.12.61,3.46,3.46,0,0,1-.41.67l-1.23,1.67a2.53,2.53,0,0,0-.31.58,2.51,2.51,0,0,0-.09.75v.63a.14.14,0,0,0,.16.16h1.44a.14.14,0,0,0,.16-.16v-.45a1.7,1.7,0,0,1,.07-.56,1.31,1.31,0,0,1,.24-.42l1.22-1.67A2.93,2.93,0,0,0,15,9.46a2.62,2.62,0,0,0-.22-1.09A2.43,2.43,0,0,0,14.18,7.52Z"}
              %circle{cx: "12", cy: "16.24", r: "1"}
        .delivery__shipping-payer
          %ul.shipping-payer-title
            %li
              配送料の負担
            %li.required
              必須
          .delivery__shipping-payer__select-box
            .delivery__shipping-payer__select-box__select-area
              =f.select :shipping_charge,[["送料込み(出品者負担)"], ["着払い(購入者負担)"] ], prompt: "選択してください",class: ""
              %svg{"aria-hidden": "true", fill: "#888888", "fill-rule": "evenodd", height: "24", viewbox: "0 0 24 24", width: "24"}
                %path{d: "M12,15.66a1.73,1.73,0,0,1-1.2-.49L5.21,9.54a.7.7,0,0,1,1-1l5.62,5.62c.15.15.27.15.41,0L17.8,8.6a.71.71,0,0,1,1,0,.69.69,0,0,1,0,1l-5.57,5.58A1.71,1.71,0,0,1,12,15.66Z"}

        .delivery__shipping_method
          %ul.shipping_method-title
            %li
              配送の方法
            %li.required
              必須
          .delivery__shipping_method__select-box
            .delivery__shipping_method__select-box__select-area
              = f.collection_select :shipping_method_id, ShippingMethod.all, :id, :name, prompt: "選択してください"
              %svg{"aria-hidden": "true", fill: "#888888", "fill-rule": "evenodd", height: "24", viewbox: "0 0 24 24", width: "24"}
                %path{d: "M12,15.66a1.73,1.73,0,0,1-1.2-.49L5.21,9.54a.7.7,0,0,1,1-1l5.62,5.62c.15.15.27.15.41,0L17.8,8.6a.71.71,0,0,1,1,0,.69.69,0,0,1,0,1l-5.57,5.58A1.71,1.71,0,0,1,12,15.66Z"}

        .delivery__shipping-from-area
          %ul.shipping-from-area-title
            %li
              発送元の地域
            %li.required
              必須
          .delivery__shipping-from-area__select-box
            .delivery__shipping-from-area__select-box__select-area
              = f.collection_select :prefecture_id, Prefecture.all, :id, :name, prompt: "選択してください"
              %svg{"aria-hidden": "true", fill: "#888888", "fill-rule": "evenodd", height: "24", viewbox: "0 0 24 24", width: "24"}
                %path{d: "M12,15.66a1.73,1.73,0,0,1-1.2-.49L5.21,9.54a.7.7,0,0,1,1-1l5.62,5.62c.15.15.27.15.41,0L17.8,8.6a.71.71,0,0,1,1,0,.69.69,0,0,1,0,1l-5.57,5.58A1.71,1.71,0,0,1,12,15.66Z"}
        .delivery__shipping-days
          %ul.shipping-days-title
            %li
              発送までの日数
            %li.required
              必須
          .delivery__shipping-days__select-box
            .delivery__shipping-days__select-box__select-area
              =f.select :day_to_ship,[["1~2日で発送"], ["2~3日で発送"],["4~7日で発送"]], prompt: "選択してください",class:""
              %svg{"aria-hidden": "true", fill: "#888888", "fill-rule": "evenodd", height: "24", viewbox: "0 0 24 24", width: "24"}
                %path{d: "M12,15.66a1.73,1.73,0,0,1-1.2-.49L5.21,9.54a.7.7,0,0,1,1-1l5.62,5.62c.15.15.27.15.41,0L17.8,8.6a.71.71,0,0,1,1,0,.69.69,0,0,1,0,1l-5.57,5.58A1.71,1.71,0,0,1,12,15.66Z"}
      %hr
      .price-details
        .price-details__help
          %p 価格（¥300〜9,999,999）
          =link_to "#" do
            %svg{"aria-hidden": "true", fill: "#222222", "fill-rule": "evenodd", height: "24", viewbox: "0 0 24 24", width: "24"}
              %path{d: "M12,2A10,10,0,1,0,22,12,10,10,0,0,0,12,2Zm0,18.6A8.6,8.6,0,1,1,20.6,12,8.61,8.61,0,0,1,12,20.6Z"}
              %path{d: "M14.18,7.52A2.72,2.72,0,0,0,13.25,7a3.16,3.16,0,0,0-1.17-.2A3.12,3.12,0,0,0,10,7.43,2.92,2.92,0,0,0,9,9.27c0,.12,0,.18.12.19l1.4.22c.09,0,.15,0,.17-.13a1.63,1.63,0,0,1,.44-.91A1.2,1.2,0,0,1,12,8.31a1.17,1.17,0,0,1,.88.33,1.15,1.15,0,0,1,.33.83,1.62,1.62,0,0,1-.12.61,3.46,3.46,0,0,1-.41.67l-1.23,1.67a2.53,2.53,0,0,0-.31.58,2.51,2.51,0,0,0-.09.75v.63a.14.14,0,0,0,.16.16h1.44a.14.14,0,0,0,.16-.16v-.45a1.7,1.7,0,0,1,.07-.56,1.31,1.31,0,0,1,.24-.42l1.22-1.67A2.93,2.93,0,0,0,15,9.46a2.62,2.62,0,0,0-.22-1.09A2.43,2.43,0,0,0,14.18,7.52Z"}
              %circle{cx: "12", cy: "16.24", r: "1"}
        .price-details__selling-price
          %ul
            %li
              販売価格
            %li.required
              必須
          %span ¥
          .price-details__selling-price__text-box
            .text-form
              =f.text_field :price, {placeholder: "例）300円", type: "nember",class:"text-form__price-input"}
        .price-details__fee
          %p 販売手数料（10%)
          .fee-price  —
        %hr
        .price-details__profit
          %p 販売利益
          .profit-price —

      .action-btn
        = f.submit "出品する", class: "exhibition-btn", disabled: true
        = link_to "もどる", root_path, class: "return"

      .Note
        %p  
        禁止されている
        =link_to "#", class: "heip" do
          行為
        および
        =link_to "#", class: "heip" do
          出品物
        を必ずご確認ください。
        =link_to "#", class: "heip" do
          偽ブランド品
        や
        =link_to "#", class: "heip" do
          盗品物
        などの販売は犯罪であり、法律により処罰される可能性があります。 また、出品をもちまして
        =link_to "#", class: "heip" do
          加盟店規約
        に同意したことになります。
